# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database Configuration
DATABASE_URL=postgresql://fundflow:fundflow@localhost:5432/fundflow

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Keys
CRYPTORANK_API_KEY=your_cryptorank_api_key
COINGECKO_API_KEY=your_coingecko_api_key  # Optional, free tier works
COINMARKETCAP_API_KEY=your_cmc_api_key  # Optional
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
GITHUB_TOKEN=your_github_token
NEWSAPI_KEY=your_newsapi_key

# Application Settings
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
DEBUG=True

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=30
CACHE_TTL_SECONDS=3600

# Report Generation
MAX_REPORT_LENGTH=4096  # Telegram message limit
PDF_REPORTS_ENABLED=True

# Data Collection
SCRAPER_RUN_INTERVAL_HOURS=6
HISTORICAL_DATA_DAYS=730  # 2 years

# Alerts & Notifications
ALERT_CHANNEL_ID=  # Optional: Telegram channel for alerts
ADMIN_USER_IDS=  # Comma-separated admin user IDs
